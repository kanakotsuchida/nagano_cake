<div class="container">
  <h2 class="my-5">マイページ</h2>
  <div class="row">
    <p>登録者情報</p><table class="table">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.first_name %></td>
          <td><%= @customer.last_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.first_name_kana %></td>
          <td><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
    <div class="ml-5">
      <p>注文履歴</p>
      <p><%= link_to "一覧を見る", orders_path,class:"btn btn-primary"%></p>
    </div>
    <div class="ml-5">
      <p>会員情報編集</p>
      <p><%= link_to "編集する",edit_customer_path, class:"btn btn-success"%></p>
    </div>
    
  </div>
</div>
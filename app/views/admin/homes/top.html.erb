<h1>注文履歴一覧</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
      <% @orders.each do |order| %>
      <tr>
          <td><%= link_to order.created_at, admin_order_path(order) %></td>
          <td><%= order.customer.name %></td>
          <td><%= order.order_details.quantity %></td>
          <td><%= %></td>
          <td>
              <% if item.is_sales_status == true %>
              <%= "販売中"%>
              <% else %>
              <%= "販売停止" %>
              <% end %>
          </td>
      </tr>
      <% end %>
  </tbody>
 </table>
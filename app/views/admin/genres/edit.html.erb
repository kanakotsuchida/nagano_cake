<div class="container">
  <div class="row">
    <div class="col-8">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <div class="form-group row mt-5">
          <label class="col-sm-2">
            <%= f.label :name, "ジャンル名" %>
          </label>
          <div class="col-sm-4">
            <%= f.text_field :name %>
          </div>
          <span class="col-sm-2">
            <%= f.submit "変更を保存",class: "btn btn-success btn-lg" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
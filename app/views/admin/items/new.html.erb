<div class="container mt-5">
  <div class="row">
<div class="item-edit">
  <h4 class="item-title col-5">商品新規登録</h4>
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="form-group row">
      <label class="col-sm-4">商品画像</label>
      <div class="col-sm-8">
       <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4">商品名</label>
      <div class="col-sm-8">
        <%= f.text_field :name,:size => "40x1" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4">商品説明</label>
      <div class="col-sm-8">
        <%= f.text_area :introduction,:size => "40x5"%>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4">ジャンル</label>
      <div class="col-sm-8">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "book_body"%>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4">税抜価格</label>
      <div class="col-sm-8">
         <%= f.text_field :price, placeholder: "1000",:size => "30x1"%>円
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
</div>
</div>
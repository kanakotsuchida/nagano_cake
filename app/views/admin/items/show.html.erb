<div class="container mt-5">
  <div class="row">
    <div class="col-4 mt-2">
      <div>
        <h4 class="item-title">商品詳細</h4>　<br>
      </div>
     <div> <%= image_tag @item.get_image(300,300)%></div>
    </div>
    <div class="col-7 row justify-content-around mt-2">
    <table class="table-demo">
      <tr>
          <th>商品名</th>
          <td><%= @item.name%></td>
      </tr>
      <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
      </tr>
      <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
      </tr>
      <tr>
          <th>商品価格　<br>
            (税込価格)</th>
          <td><%= @item.non_taxed_price %>(<%= @item.with_tax_price%>円)</td>
      </tr>
      <tr>
          <th>販売ステータス</th>
          <td> <% if @item.is_sales_status == true %>
              <%="販売中"%>
              <% else %>
              <%= "販売停止中"%>
              <% end %>
  　　　　</td>
      </tr>
  </table>
   <div><%= link_to "編集する",edit_admin_item_path, class: "btn btn-success btn-lg "%></div>
  </div>
 </div>
</div>


